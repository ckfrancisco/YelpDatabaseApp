<Window x:Class="DuckAndCo_YelpApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DuckAndCo_YelpApp"
        mc:Ignorable="d"
        Title="DuckAndCo_YelpApp" Height="360" Width="783" MinWidth="1000" MinHeight="500">
    <Grid>

        <GroupBox x:Name="selectLocationGroupBox" Header="Select Location" Margin="10,10,0,0" Height="132" VerticalAlignment="Top" HorizontalAlignment="Left" Width="276">
            <Grid>
                <Label x:Name="stateLabel" Content="State" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
                <ComboBox x:Name="stateComboBox" Height="26" VerticalAlignment="Top" Margin="88,10,10,0" SelectionChanged="stateComboBox_SelectionChanged"/>
                
                <Label x:Name="cityLabel" Content="City" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,41,0,0"/>
                <ComboBox x:Name="cityComboBox" Height="26" VerticalAlignment="Top" Margin="88,41,10,0" SelectionChanged="cityComboBox_SelectionChanged"/>

                <Label x:Name="postalCodeLabel" Content="Postal Code" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,72,0,0"/>
                <ComboBox x:Name="postalCodeComboBox" Height="26" VerticalAlignment="Top" Margin="88,72,10,0" SelectionChanged="postalCodeComboBox_SelectionChanged"/>
            </Grid>
        </GroupBox>


        <GroupBox x:Name="groupBox" Header="Business Categories" Margin="10,147,0,10" HorizontalAlignment="Left" Width="276">
            <Grid>
                <ListBox x:Name="categoriesListBox" Margin="10" SelectionChanged="categoriesListBox_SelectionChanged"/>
            </Grid>
        </GroupBox>

        <DataGrid x:Name="businessGrid" Margin="291,10,10,10" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible"/>

    </Grid>
</Window>
