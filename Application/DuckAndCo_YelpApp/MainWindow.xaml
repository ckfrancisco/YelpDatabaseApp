<Window x:Class="DuckAndCo_YelpApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DuckAndCo_YelpApp"
        mc:Ignorable="d"
        Title="DuckAndCo_YelpApp" Height="360" Width="783" MinWidth="1000" MinHeight="500">
    <Grid>
        <TabControl>

            <TabItem Header="Users">
                <Grid>
                    <GroupBox x:Name="userGroupBox" Header="Select User" Margin="10,10,0,0" Height="100" VerticalAlignment="Top" HorizontalAlignment="Left" Width="276">
                        <Grid>
                            <Label x:Name="nameLabel" Content="Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
                            <TextBox x:Name="nameTextBox" HorizontalAlignment="Left" Height="26" Padding="0,3,0,0" Margin="62,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="192"/>

                            <Label x:Name="userLabel" Content="User ID" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,41,0,0"/>
                            <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="62,41,0,0" VerticalAlignment="Top" Width="192" Height="26"/>
                        </Grid>
                    </GroupBox>

                    <GroupBox x:Name="friendsGroupBox" Header="Friends" Margin="10,115,0,10" HorizontalAlignment="Left" Width="276">
                        <Grid>
                            <DataGrid x:Name="friendsGrid" Margin="10,10,10,10" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible"/>
                        </Grid>
                    </GroupBox>

                    <GroupBox x:Name="userInfoGroupBox" Header="Information" Margin="291,10,314,0" VerticalAlignment="Top" Height="157">
                        <Grid>
                            <Label x:Name="nameInfoLabel" Content="Name" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                            <TextBox x:Name="nameInfoTextBox" Height="26" Padding="0,3,0,0" Margin="95,10,118,0" TextWrapping="Wrap" VerticalAlignment="Top"/>

                            <Label x:Name="starsLabel" Content="Stars" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.539,0.224"/>
                            <TextBox x:Name="starsTextBox" Height="26" Padding="0,3,0,0" Margin="95,41,118,0" TextWrapping="Wrap" VerticalAlignment="Top"/>

                            <Label x:Name="fansLabel" Content="Fans" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" RenderTransformOrigin="3.2,1.335"/>
                            <TextBox x:Name="fansTextBox" Height="26" Padding="0,3,0,0" Margin="95,72,118,0" TextWrapping="Wrap"  VerticalAlignment="Top"/>

                            <Label x:Name="sinceLabel" Content="Yelping Since" HorizontalAlignment="Left" Margin="10,103,0,0" VerticalAlignment="Top"/>
                            <TextBox x:Name="sinceTextBox" Height="26" Padding="0,3,0,0" Margin="95,103,118,0" TextWrapping="Wrap" VerticalAlignment="Top"/>

                            <Label x:Name="funnyLabel" Content="Funny" Margin="0,10,71,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="42"/>
                            <TextBox x:Name="funnyTextBox" Height="26" Padding="0,3,0,0" Margin="0,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Right" Width="55"/>

                            <Label x:Name="coolLabel" Content="Cool" Margin="0,41,79,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="34"/>
                            <TextBox x:Name="coolTextBox" Height="26" Padding="0,3,0,0" Margin="0,41,10,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Right" Width="55"/>

                            <Label x:Name="usefulLabel" Content="Useful" Margin="0,72,70,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="43"/>
                            <TextBox x:Name="usefulTextBox" Height="26" Padding="0,3,0,0" Margin="0,72,10,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Right" Width="55"/>
                        </Grid>
                    </GroupBox>

                    <GroupBox x:Name="userLocationGroupBox" Header="Location" Margin="0,10,10,0" VerticalAlignment="Top" Height="157" HorizontalAlignment="Right" Width="299">
                        <Grid>
                            <Label x:Name="latitudeLabel" Content="Latitude" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                            <TextBox x:Name="latitudeTextBox" Height="26" Padding="0,3,0,0" Margin="79,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>

                            <Label x:Name="longitudeLabel" Content="Longitude" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
                            <TextBox x:Name="longitudeTextBox" Height="26" Padding="0,3,0,0" Margin="79,41,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
                        </Grid>
                    </GroupBox>

                    <GroupBox x:Name="tipsGroupBox" Header="Tips From Friends" Margin="291,172,10,10">
                        <Grid>
                            <DataGrid x:Name="tipsGrid" Margin="10,10,10,10" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>

            <TabItem Header="Reviews">
                <Grid>
                    <GroupBox x:Name="locationGroupBox" Header="Select Location" Margin="10,10,0,0" Height="132" VerticalAlignment="Top" HorizontalAlignment="Left" Width="276">
                        <Grid>
                            <Label x:Name="stateLabel" Content="State" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
                            <ComboBox x:Name="stateComboBox" Height="26" VerticalAlignment="Top" Margin="88,10,10,0" SelectionChanged="stateComboBox_SelectionChanged"/>

                            <Label x:Name="cityLabel" Content="City" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,41,0,0"/>
                            <ComboBox x:Name="cityComboBox" Height="26" VerticalAlignment="Top" Margin="88,41,10,0" SelectionChanged="cityComboBox_SelectionChanged"/>

                            <Label x:Name="postalCodeLabel" Content="Postal Code" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,72,0,0"/>
                            <ComboBox x:Name="postalCodeComboBox" Height="26" VerticalAlignment="Top" Margin="88,72,10,0" SelectionChanged="postalCodeComboBox_SelectionChanged"/>
                        </Grid>
                    </GroupBox>

                    <GroupBox x:Name="categoriesGroupBox" Header="Business Categories" Margin="10,147,0,10" HorizontalAlignment="Left" Width="276">
                        <Grid>
                            <ListBox x:Name="categoriesListBox" Margin="10" SelectionChanged="categoriesListBox_SelectionChanged"/>
                        </Grid>
                    </GroupBox>

                    <DataGrid x:Name="businessGrid" Margin="291,10,10,10" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible"/>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>